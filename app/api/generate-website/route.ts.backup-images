  "imageSearchTerms": {
    "hero": "Specific, descriptive Unsplash search term for hero image (e.g., 'luxury restaurant interior candlelight elegant')",
    "about": "Specific, descriptive Unsplash search term for about section (e.g., 'professional chef cooking kitchen action')",
